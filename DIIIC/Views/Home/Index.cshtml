@model DIIIC.Models.RequestsViewModel

<style>
    h3 {
        font-size: 20px;
    }
    th, td {
        text-align:center;
    }
</style>
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>1</h3>
                    <p>Pedidos de Renovação</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="@Url.Action("RenovationOrders","Home")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>5</h3>
                    <p>Pedidos efetuados</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="@Url.Action("HistorialOrders","Home")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>3</h3>
                    <p>Medicamentos registados</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="@Url.Action("Patients","Home")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>10</h3>
                    <p>Pacientes</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="@Url.Action("Patients","Home")" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div><!-- ./col -->
    </div><!-- /.row -->

    <!-- Main row -->
    <div class="row">
        <div class="col-lg-3 col-md-3">
            <section class="content">
                <div class="row" style="display:flex">
                    <div class="col-lg-12 col-md-12" style="margin: 0px auto 2em auto; padding-left:0px; text-align:center">
                        <h3>Pedidos de Renovação</h3>
                    </div>
                </div>
                <div class="row" style="display:flex">
                    <div class="col-lg-12 col-md-12" style="margin:0 auto">
                        <table id="renovationTable" class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Número do Pedido</th>
                                    <th>Medicamento</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.renovationRequests.Select((value, i) => new { i, value }))
                                {
                                    <tr>
                                        <td>@(@item.i + 1) </td>
                                        <td>@item.value.pill.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
        <div class="col-lg-6 col-md-6">
            <section class="content">
                <div class="row" style="display:flex">
                    <div class="col-lg-12 col-md-12" style="margin: 0px auto 2em auto; padding-left:0px; text-align:center">
                        <h3>Pedidos Efetuados</h3>
                    </div>
                </div>
                <div class="row" style="display:flex">
                    <div class="col-lg-12 col-md-12" style="margin:0 auto">
                        <table id="historialTable" class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Número do Pedido</th>
                                    <th>Medicamento</th>
                                    <th>Quantidade (caixas)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.historialRequests.Select((value, i) => new { i, value }))
                                {
                                    <tr>
                                        <td>@(@item.i +1) </td>
                                        <td>@item.value.medicamento</td>
                                        <td>@item.value.quantidade</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
        <div class="col-lg-3 col-md-3">
            <section class="content">
                <div class="row" style="display:flex">
                    <div class="col-lg-12 col-md-12" style="margin: 0px auto 2em auto; padding-left:0px; text-align:center">
                        <h3>Medicamentos Registados</h3>
                    </div>
                </div>
                <div class="row" style="display:flex">
                    <div class="col-lg-12 col-md-12" style="margin:0 auto">
                        <table id="pillsTable" class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Número</th>
                                    <th>Medicamento</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.pillsRegistered.Select((value, i) => new { i, value }))
                                {
                                    <tr>
                                        <td>@(@item.i + 1) </td>
                                        <td>@item.value.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>